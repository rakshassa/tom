<% provide(:title, "Edit vendor") %>
<h1>Update this Vendor</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@vendor) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'span6' %>

	    <%= render 'addresses/edit_collection', { address: @address, vendor: @vendor }  %>
	  
      <br>
      <br>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", @vendor,  method: :get, class: "btn btn-large" %>
    <% end %>

  </div>
</div>